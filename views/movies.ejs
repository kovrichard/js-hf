
<!DOCTYPE html>
<html>
    <head>
        <%- include('header', {title: 'Movies'}) %>
        <link href="https://unpkg.com/bootstrap-table@1.18.2/dist/bootstrap-table.min.css" rel="stylesheet">

        <script src="https://unpkg.com/tableexport.jquery.plugin/tableExport.min.js"></script>
        <script src="https://unpkg.com/bootstrap-table@1.18.2/dist/bootstrap-table.min.js"></script>
        <script src="https://unpkg.com/bootstrap-table@1.18.2/dist/extensions/export/bootstrap-table-export.min.js"></script>
    </head>

    <body>
        <%- include('navbar', {active: 'movies'}) %>

        <main class="d-flex flex-column">
            <div class="container">
                <div class="w-100 d-flex justify-content-center pb-5">
                    <div class="welcome-card rented-movies p-3 p-md-5 p-lg-5 mt-5">
                        <div class="text-center">
                            <h3>Movies</h3>
                        </div>
                        
                        <form class="pt-3 d-flex flex-row">
                            <div class="w-50">
                                <input class="form-control" id="myInput" type="text" placeholder="Search..">
                            </div>
                            
                            <div class="form-check w-50 text-right">
                                <input id="show_unavailable" class="form-check-input" type="checkbox" style="vertical-align: middle; position: relative; bottom: 1px;">
                                <label class="form-check-label" for="show_unavailable" style="vertical-align: middle; position: relative;">Show unavailable</label>
                            </div>
                            
                        </form>
                        <br>
                        <div style="overflow-x: auto;">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Year</th>
                                        <th>Directed by</th>
                                        <th>Category</th>
                                    </tr>
                                </thead>
                                <tbody id="myTable">
                                    <% movies.forEach((movie) => { %>
                                        <tr>
                                            <td>
                                                <a href="/movie/<%= movie.id %>"><%= movie.title %></a>
                                            </td>
                                            <td>
                                                <%= movie.year %>
                                            </td>
                                            <td>
                                                <%= movie.directedby %>
                                            </td>
                                            <td>
                                                <%= movie.category %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center pt-3">
                            <a type="button" class="btn login_btn" href="/movie/new">New</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
  
        <script>
            $(document).ready(function(){
                $("#myInput").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
    </body>
</html>
